---
import SectionLayout from "../../layouts/SectionLayout.astro";
import Experience from "./Experience.astro";
import ButtonsContainer from "../UI/ButtonsContainer.astro";
import Button from "../UI/Button.astro";

import { link } from "../../scripts/globalConfig";
---

<SectionLayout id="experience" extraStyles="clusterPattern">
  <div class="lg:grid lg:grid-cols-2 gap-16 flex flex-col">
    <div>
      <h2 class="mb-16">Work Experience</h2>
      
      <p class="mb-4">In addition to the experience demonstrated in my projects, I have the following experience in the digital sector.</p>
      <p>You can learn more about this experience directly from my CV or LinkedIn profile</p>

      <ButtonsContainer>
        <Button 
          url={link.CV}
          label="View resume"
          target="_blank"
          level="main"
        />

        <Button 
          url={link.CV}
          label="Go to LinkedIn profile"
          target="_blank"
          level="second"
        />
      </ButtonsContainer>
    </div>

    <div class="flex flex-col gap-8">
      <!-- <Experience
        image="disarte"
        company="Freelance"
        position="Freelance designer"
        date="Jun 2023 - Actually"
      /> -->
  
      <Experience
        image="accenture"
        company="Accenture"
        position="Support Developer"
        date="Sep 2022 - Mar 2023"
      />
  
      <Experience
        image="disarte"
        company="Disarte"
        position="Graphic designer"
        date="Feb 2021 - Nov 2021"
      />
    </div>
  </div>
</SectionLayout>