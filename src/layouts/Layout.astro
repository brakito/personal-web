---
import '../styles/global.css';
interface Props {
	title: string;
}

const { title }: Props = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-[--main-color] text-[--secondary-color]">
		<slot />
		<div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-[--main-color]
      bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(127,18,255,.2),rgba(255,255,255,0))]"
    >
	</body>
</html>