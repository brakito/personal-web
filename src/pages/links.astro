---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/UI/Footer.astro";
import Button from "../components/UI/Button.astro";
import myImage from "../../public/Me.webp";
import { Image } from "astro:assets";

type Link = {
  label: string,
  url: string
}

const links: Link[] = [
  {
    label: "Let's work on your project!",
    url: "https://arkane-dev.netlify.app/pricing"
  },
  {
    label: "Get to know my design work",
    url: "https://www.behance.net/arkane-dev"
  },
  {
    label: "Learn entrepreneurship on my Instagram",
    url: "https://www.instagram.com/arkanedev/"
  },
  {
    label: "Don't miss anything, follow me on LinkedIn",
    url: "https://www.linkedin.com/in/arkanedev/"
  },
  {
    label: "Look out my portfolio dev!",
    url: "https://arkane-dev.netlify.app/portfolio"
  },
]
---

<Layout title="Arkane Dev Links">
  <hero
    id="start"
    class="flex flex-col w-fill lg:max-w-[55rem] lg:mx-auto mx-4 mt-20 p-10 rounded-2xl justify-center items-center text-center
    ring-2 backdrop-blur dark:ring-[#FFFFFF]/15 ring-[#1D252D]/15 backdrop-filter
    bg-gradient-to-bl dark:from-[#FFFFFF]/10 dark:to-[#FFFFFF]/0"
  >
    <Image
      loading="eager"
      src={myImage}
      alt="Brayan Arango"
      class="aspect-square w-[8rem]"
    />

    <h1 class="text-5xl mb-4 mt-8">Arkane Dev</h1>

    <h3 class="max-w-[35rem] text-pretty text-2xl">
      Development and graphic design
    </h3>
  </hero>
  <main class="lg:max-w-[55rem] lg:mx-auto mx-4 flex flex-col gap-7 justify-center items-center min-h-[100%] mt-8 mb-20">
    {
      links.map(link => {
        return (
          <a target="_blank" href={link.url} class="w-full text-center px-8 py-4 border-2 border-[--accent-color] rounded-2xl lg:hover:bg-[--accent-color] lg:hover:drop-shadow-glow transition-all lg:hover:text-[#ffffff] backdrop-blur">
            <h3 class="lg:text-2xl text-xl">{link.label}</h3>
          </a>
          // <Button
          //   url={link.url}
          //   label={link.label}
          //   target="_blank"
          //   level="main"
          // />
        );
      })
    }
  </main>
  <!-- <Footer /> -->
</Layout>